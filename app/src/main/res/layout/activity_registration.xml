<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    <ImageView
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:src="@drawable/logo"
        android:layout_gravity="center"
        />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Get Started now"
    android:textAlignment="center"
    android:textStyle="bold"
    android:textColor="@color/colorPrimaryText"
    android:textSize="30dp"/>
    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Create an account or log in to explore \n about our app"
    android:textAlignment="center"
    android:textStyle="bold"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryText"
        android:text="Name"
        android:textStyle="bold"
        android:layout_marginLeft="10sp"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/custom_textbox"
        android:hint=""
        android:padding="15dp"
        android:textColorHint="#000000"
        android:textSize="25dp"
        android:inputType="textPersonName"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryText"
        android:text="Email/Username"
        android:textStyle="bold"
        android:layout_marginLeft="10sp"
        android:textSize="15dp" />
    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/custom_textbox"
        android:hint=""
        android:padding="15dp"
        android:textColorHint="#000000"
        android:textSize="25dp"
        android:inputType="textEmailAddress"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryText"
        android:text="Mobile Number"
        android:textStyle="bold"
        android:layout_marginLeft="10sp"
        android:textSize="15dp" />
    <EditText
        android:id="@+id/editTextMobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/custom_textbox"
        android:hint=""
        android:padding="15dp"
        android:textColorHint="#000000"
        android:textSize="25dp"
        android:inputType="phone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryText"
        android:text="Password"
        android:textStyle="bold"
        android:layout_marginLeft="10sp"
        android:textSize="15dp" />
    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/custom_textbox"
        android:hint=""
        android:padding="15dp"
        android:textColorHint="#000000"
        android:textSize="25dp"
        android:inputType="textPassword"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Favorite Categories"/>
<HorizontalScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/buttonToggleGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:singleSelection="false">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sports"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonBusiness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Business"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"

            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonEntertainment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entertainment"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonAstrology"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Astrology"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonGlobal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Global"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
             />

    </com.google.android.material.button.MaterialButtonToggleGroup>
</HorizontalScrollView>
    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="wrap_content"
        android:layout_height="60sp"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:layout_margin="10dp"
        android:backgroundTint="@color/colorPrimary"
        android:textSize="20sp"
        android:text="Register"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
