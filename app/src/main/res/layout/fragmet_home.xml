<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFF"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
     <androidx.cardview.widget.CardView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         app:cardCornerRadius="5dp"
         app:cardElevation="0dp"
         app:cardBackgroundColor="@android:color/transparent"
         android:layout_marginStart="10dp"
         android:layout_marginEnd="10dp"
         android:layout_marginTop="15dp"
         android:layout_marginBottom="8dp">

         <com.denzcoskun.imageslider.ImageSlider
             android:id="@+id/image_slider"
             android:layout_width="match_parent"
             android:layout_height="150dp"
             app:iss_auto_cycle="true"
             app:iss_period="1000"
             app:iss_delay="1000"
             app:iss_text_align="center" />

     </androidx.cardview.widget.CardView>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="10sp"
         android:padding="5dp"
         android:elevation="10dp"
         android:orientation="vertical"
         android:visibility="gone"
         >
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Search By"
         android:textColor="@color/colorPrimaryText"
         android:textStyle="bold"
         android:textSize="15sp"
         />
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginTop="5sp"
             android:layout_marginBottom="5sp"
             >
             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="vertical">
                 <ImageView
                     android:layout_width="25sp"
                     android:layout_height="25sp"
                     android:layout_gravity="center"
                     android:src="@drawable/bydate"/>
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Date"
                     android:layout_gravity="center"
                     />
             </LinearLayout>
             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:layout_marginLeft="10dp">
                 <ImageView
                     android:layout_width="25sp"
                     android:layout_height="25sp"
                     android:layout_gravity="center"
                     android:src="@drawable/byplace"/>
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Place"
                     android:layout_gravity="center"
                     />
             </LinearLayout>

         </LinearLayout>
     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="200dp"
         android:layout_margin="10sp"
         android:padding="5dp"
         android:elevation="10dp"
         android:orientation="vertical"
         android:visibility="gone"
         >
     <WebView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:id="@+id/wvYoutubeVideo"
         />
     </LinearLayout>
            <!-- Horizontal ScrollView for Categories -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="55sp"
                android:padding="10dp"
                android:scrollbars="none"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Category Buttons/TextViews -->
                    <Button
                        android:id="@+id/btnTop"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="Top Stories"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="@color/colorPrimary"
                        android:layout_marginEnd="10dp"
                        android:textSize="16dp"
                        android:padding="10dp"
                        />
                    <Button
                        android:id="@+id/btnGlobal"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="देश-विदेश"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#D32F2F"
                        android:layout_marginEnd="10dp"
                        android:textSize="13dp"
                        android:padding="10dp"
                        />
                    <Button
                        android:id="@+id/btnMP"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="मध्ययप्रदेश"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#B71C1C"
                        android:layout_marginEnd="10dp"
                        android:textSize="13dp"
                        android:padding="10dp"
                        />
                    <Button
                        android:id="@+id/btnCG"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="छत्तीसगढ़"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#880E4F"
                        android:layout_marginEnd="10dp"
                        android:textSize="13dp"
                        android:padding="10dp"
                        />
                    <Button
                        android:id="@+id/btnUP"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="उतर प्रदेश"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#FF1744"
                        android:layout_marginEnd="10dp"
                        android:textSize="13dp"
                        android:padding="10dp"
                        />
                    <Button
                        android:id="@+id/btnBusiness"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="फाइनेंस"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#2E7D32"
                        android:layout_marginEnd="10dp"
                        android:textSize="16dp"
                        android:padding="10dp"
                        />
                    <Button
                        android:id="@+id/btnSports"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="खेल"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#FF6F00"
                        android:layout_marginEnd="10dp"
                        android:textSize="13dp"
                        android:padding="10dp"
                        />
                    <Button
                        android:id="@+id/btnEntertainment"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="एंटरटेनमेंट"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#FF00FF"
                        android:layout_marginEnd="10dp"
                        android:textSize="13dp"
                        android:padding="10dp"
                        />


                    <Button
                        android:id="@+id/btnAstro"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="सनातन"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#F57C00"
                        android:layout_marginEnd="10dp"
                        android:textSize="13dp"
                        android:padding="10dp"
                        />

                    <Button
                        android:id="@+id/btnCrime"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="जुर्म गाथा"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#424242"
                        android:layout_marginEnd="10dp"
                        android:textSize="13dp"
                        android:padding="10dp"
                        />



                    <Button
                        android:id="@+id/btnInfotenment"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="इंफोटेनमेंट"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#9575CD"
                        android:layout_marginEnd="10dp"
                        android:textSize="13dp"
                        android:padding="10dp"
                        />
                    <Button
                        android:id="@+id/btnWebStories"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="Web Stories"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#009688"
                        android:layout_marginEnd="10dp"
                        android:textSize="13dp"
                        android:padding="10dp"
                        />

                </LinearLayout>
            </HorizontalScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_margin="3sp"
                android:padding="2dp"
                android:elevation="10dp"
                android:orientation="vertical">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Recent News :"
             android:textStyle="bold"
             android:textSize="20sp"
             android:textColor="#EA3C5E"
             android:layout_marginLeft="10dp"
             />


         <androidx.recyclerview.widget.RecyclerView
             android:id="@+id/recyclerViewRecommended"
             android:layout_width="match_parent"
             android:background="@drawable/custom_recomendd_news_box"
             android:layout_height="wrap_content"
             android:layout_margin="1dp"/>
     <!--<ImageView
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:src="@drawable/recentappdemo"
         android:layout_weight="1"
         android:id="@+id/imgRecomended"
         />
     <TextView
         android:id="@+id/txtRecomendedNews"
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:layout_marginLeft="10dp"
         android:layout_gravity="center"
         android:textAlignment="center"
         android:text="Ukraine President Volodymyr Zelenskyy called Modi’s visit “friendly” and “symbolic” because Modi came the day before Ukraine’s Independence Day."/>-->


     </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>