<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#B60000" /> <!-- Active Tab Color -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFCDD2" /> <!-- Inactive Tab Color -->
            <corners android:radius="16dp" />
            <stroke
                android:width="2dp"
                android:color="#B60000" /> <!-- Tab Border -->
        </shape>
    </item>
</selector>